{
  "name": "radarbot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "preandroid": "npx patch-package @pawan-pk/react-native-mapbox-navigation",
    "apply-patch": "npx patch-package @pawan-pk/react-native-mapbox-navigation",
    "build:release": "npm run apply-patch && cd android && ./gradlew assembleRelease",
    "android": "react-native run-android",
    "android:build": "cd android && gradlew.bat assembleDebug && cd ..",
    "android:install": "cd android && gradlew.bat installDebug && cd ..",
    "ios": "react-native run-ios",
    "android:start": "npm start & timeout /t 5 >nul & npm run android",
    "android:bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@pawan-pk/react-native-mapbox-navigation": "^0.5.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@rnmapbox/maps": "^10.2.10",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.27.0",
    "react-native-tts": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.85",
    "@react-native/metro-config": "0.74.85",
    "@react-native/typescript-config": "0.74.85",
    "@types/geojson": "^7946.0.11",
    "@types/react": "^18.2.38",
    "@types/react-native": "^0.73.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
