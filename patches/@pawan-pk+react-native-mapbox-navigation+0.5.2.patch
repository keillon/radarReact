+    val lat2 = Math.toRadians(lineStart.latitude())
+    val lon2 = Math.toRadians(lineStart.longitude())
+    val lat3 = Math.toRadians(lineEnd.latitude())
+    val lon3 = Math.toRadians(lineEnd.longitude())
+    
+    // Calcular vetor do segmento
