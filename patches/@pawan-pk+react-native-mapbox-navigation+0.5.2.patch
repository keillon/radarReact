+    val dLon2 = lon1 - closestLon
+
+    val a =
+            Math.sin(dLat2 / 2) * Math.sin(dLat2 / 2) +
+                    Math.cos(lat1) *
+                            Math.cos(closestLat) *
+                            Math.sin(dLon2 / 2) *
+                            Math.sin(dLon2 / 2)
+    val c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a))
+
+    return R * c
